<div class="callout">
    <div class="row">
        <div class="large-12 columns show-for-large">
            <ul class="menu align-right">
                <li><span class="float-left small-10 columns">{{ spyCurrencySwitch() }}</span></li>
                {% include '@ShopLayout/layout/partials/language-navigation.twig' %}
                {% if app['cart.quantity'] > 0 %}
                    <li><span class="warning badge float-left">{{ app['cart.quantity'] }}</span></li>
                {% endif %}
                <li><a href="{{ url('cart') }}"><i class="fa fa-shopping-cart"></i>{{ 'global.cart' | trans }}</a></li>
                {% include '@ShopLayout/layout/partials/customer-navigation.twig' %}
            </ul>
        </div>

        <div class="small-12 columns hide-for-large">
            {% include '@ShopLayout/layout/partials/search-form.twig' %}
        </div>
    </div>
</div>

{{ spyNavigation('MAIN_NAVIGATION', '@ShopLayout/layout/navigation/main.twig') }}
