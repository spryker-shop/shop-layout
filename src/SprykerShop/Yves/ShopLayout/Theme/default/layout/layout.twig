{% extends template('shop', 'layout') %}

{% set locale = app.locale | slice(0, 2) %}
{% set title = title | default('global.spryker.shop') | trans %}
{% set metaDescription = metaDescription | default('') | trans %}
{% set metaKeywords = metaKeywords | default('') | trans %}

{% block body %}
    {% block outside %}{% endblock %}

    <aside id="aside" class="hide-for-large __aside" tabindex="-1" data-component="aside">
        {% include "@ShopLayout/layout/partials/mobile-navigation.twig" %}
        {% block aside %}{% endblock %}
    </aside>
    <div class="__aside-closing-bar">
        <a class="close-button">&times;</a>
    </div>

    <div class="__page" tabindex="-1">
        {% block page_start %}{% endblock %}
        <header>
            <div class="row">
                <div class="small-12 columns">
                    <div class="callout">
                        <div class="row align-middle align-justify">
                            <div class="small-7 large-5 xlarge-6 columns">
                                <a href="/">
                                    <img src="/assets/default/img/logo.svg" />
                                </a>
                            </div>
                            {% block header %}
                                <div class="large-7 xlarge-6 columns show-for-large">
                                    {% include '@ShopLayout/layout/partials/search-form.twig' %}
                                </div>

                                <a class="shrink columns text-right align-middle hide-for-large" href="#aside" data-aside-toggle>
                                    {% if app['cart.quantity'] > 0 %}
                                        <span class="warning badge">{{ app['cart.quantity'] }}</span>
                                    {% endif %}
                                    <i class="fa fa-bars"></i>
                                </a>
                            {% endblock %}
                        </div>
                    </div>
                    {% block navigation %}
                        {% include "@ShopLayout/layout/partials/navigation.twig" %}
                    {% endblock %}

                    {% block breadcrumb %}
                        <div class="callout">
                            <nav role="navigation">
                                <ul class="breadcrumbs __no-margin-bottom">
                                    {% block breadcrumbItems %}{% endblock %}
                                </ul>
                            </nav>
                            {% block pageTitle %}{% endblock %}
                        </div>
                    {% endblock %}

                    {% include "@ShopLayout/layout/partials/flash-messages.twig" %}
                </div>
            </div>
        </header>

        <main>
            {% block content %}{% endblock %}
        </main>

        <footer>
            <div class="row">
                {% block footer %}
                    {% include "@ShopLayout/layout/partials/footer.twig" %}
                {% endblock %}

                <div class="small-12 columns text-center">
                    <p class="callout">
                        Lorem ipsum dolor sit amet, consectetuer adipiscing elit.
                        <br>Aenean commodo ligula eget dolor. Aenean massa.
                        <br>&copy; ACME Company
                    </p>
                </div>
            </div>

        </footer>
    </div>
{% endblock %}
