{% set class = node.cssClass %}
{% set url = node.url %}
{% set title = node.title %}
{% set today = "now"|date("Ymd") %}

{% if node.isActive and
    (node.validFrom is empty or node.validFrom|date("Ymd") <= today) and
    (node.validTo is empty or node.validTo|date("Ymd") >= today)
%}
    {% block nodeContainer %}
        {% if node.nodeType == 'category' or node.nodeType == 'link' or node.nodeType == 'cms_page' %}
            {% block url %}{% endblock %}
        {% elseif node.nodeType == 'external_url' %}
            {% block externalUrl %}{% endblock %}
        {% else %}
            {% block other %}{% endblock %}
        {% endif %}
    {% endblock %}
{% endif %}
