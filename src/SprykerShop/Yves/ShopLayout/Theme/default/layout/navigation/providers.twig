{% for node in _widget.navigationTree.nodes %}
    {% embed '@ShopLayout/layout/navigation/_partials/base-node.twig' %}
        {% block nodeContainer %}
            <div class="thumbnail picture">
                {{ parent() }}
            </div>
        {% endblock %}

        {% block url %}
            <a class="picture__image {{ class }}" href="{{ url }}" title="{{ title }}"></a>
        {% endblock %}

        {% block externalUrl %}
            <a class="picture__image {{ class }}" href="{{ url }}" target="_blank" title="{{ title }}"></a>
        {% endblock %}

        {% block other %}
            <span class="picture__image {{ class }}" title="{{ title }}"></span>
        {% endblock %}
    {% endembed %}
{% endfor %}
